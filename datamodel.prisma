type User {
  id: ID! @id
  username: String!
  email: String!
  firstName: String @default(value:"") 
  lastName: String!
  bio: String!
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  following: [User!]! @relation(name: "FollowRelation")
  followers: [User!]! @relation(name: "FollowRelation")
}


type Post {
  id: ID! @id
  files: [File!]!
  location: String
  caption: String
  user:User!
  likes: [Like!]!
  comments:[Comment!]!
}

type Like {
  id: ID! @id
  user: User!
  post: Post!
}

type Comment {
  id: ID! @id
  test: String!
  user: User!
  post: Post!
}

type File {
  id: ID! @id
  url : String!
  post : Post!
}
